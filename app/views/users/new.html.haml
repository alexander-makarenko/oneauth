= render 'shared/validation_errors', obj: @user

%h2.text-center Create Account

.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
  = form_for @user, html: { class: 'center-block' } do |f|
    = render 'shared_form_fields', f: f
    .form-group
      = f.label :password, 'Password'
      = f.password_field :password, class: 'form-control'
    .form-group
      = f.label :password_confirmation, 'Retype Password'
      = f.password_field :password_confirmation, class: 'form-control'
    .form-group
      = f.submit 'Register', class: 'btn btn-primary'