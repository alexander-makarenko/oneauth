= render 'shared/validation_errors', obj: @site

%h2.text-center Add Site

.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
  = form_for @site, html: { class: 'center-block' } do |f|
    = render 'shared_form_fields', f: f
    .form-group
      = link_to 'Cancel', :back, class: 'btn btn-primary'
      = f.submit 'Add', class: 'btn btn-primary'